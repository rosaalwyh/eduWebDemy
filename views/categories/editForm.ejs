<%- include('../layouts/header') %>
<div class="container">
    <div class="p-3">
        <% if (msg) { %>
        <p style="color: red;"><%= msg %></p>
        <% } %>
        <form action="/category/edit/<%= categoryEdit.name %>" method="post">
            <label for="name" class="col-sm-2 col-form-label">Enter Category Name:</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= categoryEdit.name%>">
            <button type="submit" class="btn btn-outline-primary mt-3">Submit</button>
        </form> 
    </div>
</div>
<%- include('../layouts/footer') %>